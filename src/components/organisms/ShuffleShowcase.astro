---
import Mozaic from "src/components/molecules/Mozaic";
import ImageWrapper from "src/components/atoms/ImageWrapper.astro";
import actorImg from "src/assets/actor.png";
import { Picture } from "astro:assets";
---

<div class="scroll-section container">
  <div
    class="flex flex-col md:flex-row items-center justify-center gap-20 h-full w-full container"
  >
    <div class="">
      <Mozaic client:idle />
    </div>
    <div class="">
      <ImageWrapper className="w-full h-auto lg:h-[55dvh] lg:max-w-3xl">
        <Picture
          class="w-full h-full object-cover overflow-hidden"
          src={actorImg}
          formats={["avif", "webp", "jpeg"]}
          fallbackFormat="png"
          alt="Actor portrait"
        />
      </ImageWrapper>
    </div>
  </div>
</div>
